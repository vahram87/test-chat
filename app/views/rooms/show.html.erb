<div class="container">
  <div class="row">
    <% if @room.is_public == true %>
      <h2 class="text-center">
        <%= @room.name %>
      </h2>
    <% else %>
      <h2 class="text-center">
        <%= @user.username %>
      </h2>
    <% end %>
  </div>

  <div class="row">
    <div class="col bg-dark text-white" style="height: 600px; overflow: scroll;">
      <%= turbo_stream_from @room %>
      <div id="messages">
        <%= render @messages %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render 'messages/form' %>
    </div>
  </div>
</div>
