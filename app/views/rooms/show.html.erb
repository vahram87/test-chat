<div class="container">
  <div class="row">
    <h2 class="text-center">
      <%= @room.name %>
    </h2>
  </div>

  <div class="row">
    <div class="col bg-dark text-white" style="height: 600px; overflow: scroll;">
        <% @messages.each do |message| %>
          <% if message.user_id == current_user.id %>
              <div  class="row">
                <div class="col-md-3 rounded bg-primary py-3 my-2 mx-2">
                  <%= message.content %>
                </div>
              </div>
          <% else %>
              <div  class="row justify-content-end">
                <div class="col-md-3 rounded bg-secondary py-3 my-2 mx-2">
                  <%= message.content %>
                </div>
              </div>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render 'messages/form' %>
    </div>
  </div>
</div>
