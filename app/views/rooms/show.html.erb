<div class="container">
  <div class="row">
    <% if @room.is_public == true %>
      <h2 class="text-center">
        <%= @room.name %>
      </h2>
    <% else %>
      <h2 class="text-center">
        <%= @user.username %>
      </h2>
    <% end %>
  </div>

  <div class="row">
    <div class="col bg-dark text-white" style="height: 600px; overflow: scroll;">
        <% @messages.each do |message| %>
          <% if message.user_id == current_user.id %>
              <div  class="row">
                <div class="col-md-3 rounded bg-primary py-2 my-2 mx-2">
                  <h5><%= message.user.username %></h5>
                  <p><%= message.content %></p>
                </div>
              </div>
          <% else %>
              <div  class="row justify-content-end">
                <div class="col-md-3 rounded bg-secondary py-2 my-2 mx-2">
                  <h5><%= message.user.username %></h5>
                  <p><%= message.content %></p>
                </div>
              </div>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render 'messages/form' %>
    </div>
  </div>
</div>
